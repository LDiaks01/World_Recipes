<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/choisissez_votre_langue_pref_r_pour_naviguer_dans_notre_application"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/language_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/arabic_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العربية" />

            <RadioButton
                android:id="@+id/french_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Français" />

            <RadioButton
                android:id="@+id/english_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English" />

        </RadioGroup>

        <Button
            android:id="@+id/next_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/language_radio_group"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="229dp"
            android:layout_marginBottom="16dp"

            android:backgroundTint="@color/pink"


            android:text="Suivant" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>